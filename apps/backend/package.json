  "type": "module",
  "main": "index.ts",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "node --env-file-if-exists=.env --watch index.ts",
    "start-local-db": "./scripts/start_postgres.sh",
    "drizzle-kit-push": "pnpm drizzle-kit push",
    "drizzle-kit-generate": "pnpm drizzle-kit generate",
    "drizzle-kit-migrate": "pnpm drizzle-kit migrate",
    "build-docker": "cd ../.. && docker build --tag willdady/platypus-backend:latest --tag willdady/platypus-backend:$(git rev-parse --short HEAD) -f apps/backend/Dockerfile .",
