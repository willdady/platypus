    "@ai-sdk/openai": "^2.0.77",
    "@hono/node-server": "^1.19.6",
    "@hono/standard-validator": "^0.2.0",
    "@openrouter/ai-sdk-provider": "^1.4.1",
    "ai": "^5.0.108",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.10.7",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.8"
