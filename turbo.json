{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build-docker": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "with": ["start-local-db"]
    },
    "drizzle-kit-push": {
      "cache": false
    },
    "drizzle-kit-generate": {
      "cache": false
    },
    "drizzle-kit-migrate": {
      "cache": false
    },
    "start-local-db": {
      "cache": false,
      "persistent": true
    }
  }
}
